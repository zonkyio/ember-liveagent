{
  "private": true,
  "repository": "https://github.com/zonkyio/ember-liveagent.git",
  "license": "MIT",
  "author": "@zonkyio",
  "scripts": {
    "build": "pnpm --filter ember-liveagent build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build && husky",
    "start": "concurrently 'pnpm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter ember-liveagent start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test",
    "test:ember": "pnpm --filter '*' test:ember"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs}": "eslint --cache --fix",
    "*.hbs": "ember-template-lint --fix",
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "@glint/core": "^1.2.1",
    "concurrently": "^8.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.3",
    "prettier-plugin-ember-template-tag": "^1.1.0",
    "release-plan": "^0.9.0"
  },
  "volta": {
    "node": "18.20.0",
    "pnpm": "9.1.1"
  },
  "pnpm": {
    "overrides": {
      "@types/eslint": "^7.0.0"
    }
  }
}
